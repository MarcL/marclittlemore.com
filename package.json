{
  "name": "marclittlemore.com",
  "version": "2.0.0",
  "title": "Marc Littlemore Website",
  "homepage": "https://www.marclittlemore.com",
  "author": "Marc Littlemore <marc.littlemore@gmail.com>",
  "repository": "git@github.com:MarcL/marclittlemore.com.git",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-cache-assets": "^2.3.0",
    "@11ty/eleventy-img": "^6.0.0",
    "@11ty/eleventy-plugin-rss": "^2.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@aloskutov/eleventy-plugin-external-links": "^2.1.1",
    "@atproto/api": "^0.13.14",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@threadsjs/threads.js": "^2.0.0",
    "@ungap/url-search-params": "^0.2.2",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "dotenv": "^16.4.5",
    "eleventy-plugin-embed-twitter": "^1.4.1",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "eleventy-plugin-time-to-read": "^1.3.0",
    "eleventy-plugin-youtube-embed": "^1.11.0",
    "fast-glob": "^3.3.2",
    "googleapis": "^156.0.0",
    "husky": "^9.1.6",
    "hyperlink": "^5.0.4",
    "jsdom": "^25.0.1",
    "lodash": "^4.17.21",
    "lodash.escape": "^4.0.1",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.2.0",
    "markdown-it-emoji": "^3.0.0",
    "marked": "^14.1.3",
    "masto": "^6.10.1",
    "parcel": "^2.12.0",
    "parse-md": "^3.0.3",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "string": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "tap-spot": "^1.1.2",
    "twitter-api-v2": "^1.18.1",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "build": "NODE_ENV=production ELEVENTY_ENV=production npm run build:all && npm run links:internal",
    "build:all": "npm run build:css && npm run build:js && npm run build:site",
    "build:css": "postcss src/css/main.css -o _tmp/css/main.css",
    "build:css:watch": "npm run build:css -- --watch",
    "build:site": "eleventy",
    "build:js": "parcel build src/clientjs/index.js --dist-dir src/distjs",
    "dev": "npx @11ty/eleventy --quiet --watch & npm run build:css:watch",
    "links:internal": "hyperlink -ri --root _site --canonicalroot https://marclittlemore.com/ --skip '/.netlify/functions' _site/*.html | tap-spot",
    "links:external": "hyperlink -r --root _site --canonicalroot https://marclittlemore.com/ --skip '/.netlify/functions' _site/*.html | tap-spot",
    "post:new": "node scripts/postNew.js",
    "postNotes": "node scripts/postNotes.js",
    "serve": "npm run serve:js & ELEVENTY_ENV=dev eleventy --serve & npm run build:css:watch",
    "serve:js": "parcel watch src/clientjs/index.js"
  },
  "app": "src/distjs/bundle.js",
  "targets": {
    "app": {
      "context": "browser"
    }
  },
  "dependencies": {
    "@netlify/functions": "^2.8.2"
  }
}
