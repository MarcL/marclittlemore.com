{
  "name": "marclittlemore-site",
  "title": "MarcLittlemore.com Website",
  "version": "1.0.0",
  "homepage": "http://www.marclittlemore.com",
  "author": "Marc Littlemore",
  "scripts": {
    "build": "npm run build:js && npm run build:minify && rimraf js/bundle.js",
    "build:js": "browserify src/index.js -o js/bundle.js",
    "build:minify": "uglifyjs --compress --mangle -o js/bundle.min.js js/bundle.js",
    "deploy": "npm run build && npm run deploy:server",
    "deploy:server": "git push deploy master",
    "link-check": "blc http://localhost:4000 -ro",
    "thumbnails": "gulp thumbnails"
  },
  "license": "MIT",
  "devDependencies": {
    "broken-link-checker": "^0.7.3",
    "browserify": "~14.4.0",
    "grunt": "~0.4.5",
    "grunt-banner": "~0.2.3",
    "grunt-contrib-less": "~0.11.4",
    "grunt-contrib-uglify": "~0.5.1",
    "grunt-contrib-watch": "~0.6.1",
    "gulp": "~3.9.1",
    "gulp-jimp": "~1.2.7",
    "rimraf": "~2.6.1",
    "uglify-js": "~3.0.15"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:MarcL/marclittlemore.com.git"
  },
  "dependencies": {
    "leftpad": "0.0.1",
    "url-search-params": "~0.9.0"
  }
}
