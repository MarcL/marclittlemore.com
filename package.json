{
  "name": "marclittlemore-site",
  "title": "MarcLittlemore.com Website",
  "version": "1.0.0",
  "homepage": "http://www.marclittlemore.com",
  "author": "Marc Littlemore",
  "scripts": {
    "build": "yarn build:js && yarn build:minify && rimraf js/bundle.js",
    "build:js": "browserify src/index.js -o js/bundle.js",
    "build:minify": "uglifyjs --compress --mangle -o js/bundle.min.js js/bundle.js",
    "deploy": "yarn build && yarn deploy:server",
    "deploy:server": "git push deploy master",
    "jekyll:build": "bundle exec jekyll build",
    "link-check": "blc http://localhost:4000 -ro",
    "thumbnails": "gulp thumbnails",
    "serve": "bundle exec jekyll serve",
    "serve:draft": "bundle exec jekyll serve --drafts",
    "watch": "browser-sync start --proxy \"localhost:4000\" --files \"_site/**/*.*\""
  },
  "license": "MIT",
  "devDependencies": {
    "broken-link-checker": "^0.7.8",
    "browser-sync": "^2.26.7",
    "browserify": "~16.5.0",
    "gulp": "~4.0.2",
    "gulp-jimp": "~1.2.9",
    "rimraf": "~3.0.2",
    "uglify-js": "~3.7.7"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:MarcL/marclittlemore.com.git"
  },
  "dependencies": {
    "@ungap/url-search-params": "^0.1.4",
    "leftpad": "0.0.1"
  }
}
