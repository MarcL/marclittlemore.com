{%- for article in collection reversed -%}
<article class="pv4 bt b--black-10 ph3 ph0-l">
<div class="flex flex-column flex-row-ns">
<div class="w-100 w-60-ns pr3-ns order-2 order-1-ns">
<a href="{{ article.url }}" class="link dim black">
<h1 class="f4 f3-ns roboto mt0 lh-title mb1 tc tl-ns">{{ article.data.title }}</h1>
</a>
{% if article.data.subtitle %}
<p class="f5 f4-l lh-copy roboto i mv2">
{{article.data.subtitle}}
</p>
{% endif %}
{% if article.data.description %}
<p class="f6 f5-l lh-copy roboto">
{{article.data.description | markdownify}}
</p>
{% endif %}
{%- if article.data.icons -%}
<div class="gray tc">
{%- for icon in article.data.icons -%}
<i class="fa fa-{{icon}} fa-3x ph2"></i>
{% endfor %}
</div>
{%- endif -%}
</div>

<div class="pl3-ns order-1 order-2-ns mb4 mb0-ns w-100 w-40-ns">

{% if article.url %}
<a href="{{ article.url }}" class="grow dib">
{% endif %}

{% if article.data.thumbnail %}
<img src="{{article.data.thumbnail}}" class="db shadow-4" alt="{{article.data.title}}">
{% elsif article.data.headerImage %}
{% image article.data.headerImage article.data.title 342 "db shadow-4" %}
{% elsif article.data.image %}
<img src="{{article.data.image}}" class="db shadow-4" alt="{{article.data.title}}">
{% endif %}

{% if article.url %}
</a>
{% endif %}

</div>
</div>
</article>
{%- endfor -%}