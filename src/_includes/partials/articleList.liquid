<section class="max-w-4xl not-prose">
{%- for article in collection reversed -%}
<article class="my-4 w-full {{theme.article.text.content}} pb-4">
    <div class="w-full px-6 md:px-1">

        {% if article.url %}
            <a href="{{article.url}}" class="w-full">
                <h2 class="text-xl md:text-3xl {{theme.article.text.title}} {{theme.article.text.hover}} py-4 ">{{ article.data.title }}</h2>
            </a>
        {% else %}
            <h2 class="text-xl md:text-3xl {{theme.article.text.title}} py-4 ">{{ article.data.title }}</h2>
        {% endif %}

    <div class="w-full flex justify-center">
        {% if article.data.headerImage %}
            <a href="{{article.url}}" title="{{article.data.title}}" alt="{{article.data.title}}" class="block pb-4 {{theme.article.image.hover}}">
                {% image article.data.headerImage article.data.title "rounded-md shadow-md w-full" %}
            </a>
        {% elsif article.data.gameImage %}
            <img src="{{article.data.gameImage}}" class="rounded-md shadow-md w-full" alt="{{article.data.title}}">
        {% endif %}
    </div>

    {% if article.data.subtitle %}
    <div class="text-lg md:text-xl italic py-2 md:py-4 text-center">
        {{article.data.subtitle}}
    </div>
    {% endif %}

    {% if article.data.description %}
        <div class="font-normal text-xl md:text-2xl">
            {{article.data.description | markdownify}}
        </div>
    {% endif %}

    {%- if article.data.icons -%}
        <div class="{{theme.article.icons.main}} space-x-8 text-4xl flex justify-center justify-items-center py-4">
            {%- for icon in article.data.icons -%}
                {{icon}}
            {%- endfor -%}
        </div>
    {%- endif -%}

    </div>

</article>
{%- endfor -%}
</section>
