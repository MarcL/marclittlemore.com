{%- for article in collection reversed -%}
<article class="my-4">
<div class="flex flex-col md:flex-row pb-4 items-center">
<div class="w-full md:w-2/3 px-2 md:px-1 order-2 md:order-1">
<a href="{{article.url}}" class="hover:bg-gray-400">
<h2 class="text-2xl text-gray-900 font-semibold pt-4 md:pt-0 pb-0">{{ article.data.title }}</h2>
</a>

{% if article.data.subtitle %}
<div class="italic leading-7">
{{article.data.subtitle}}
</div>
{% endif %}

{% if article.data.description %}
<div class="font-normal text-lg md:text-2xl">
{{article.data.description | markdownify}}
</div>
{% endif %}

{%- if article.data.icons -%}
<div class="gray tc">
{%- for icon in article.data.icons -%}
<i class="fa fa-{{icon}} fa-3x ph2"></i>
{% endfor %}
</div>
{%- endif -%}
</div>

<div class="w-full md:w-1/3 order-1 md:order-2">

{% if article.url %}
<a href="{{ article.url }}" class="">
{% endif %}

{% if article.data.headerImage %}
{% image article.data.headerImage article.data.title 342 "rounded-md shadow-lg w-full" %}
{% elsif article.data.gameImage %}
<img src="{{article.data.gameImage}}" class="rounded-lg shadow-lg" alt="{{article.data.title}}">
{% endif %}

{% if article.url %}
</a>
{% endif %}

</div>
</div>
</article>
{%- endfor -%}