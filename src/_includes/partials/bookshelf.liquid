<div class="w-100">
{% for book in bookshelf %}
<article class="cf pv3">
<a href="{{book.book.link}}" target="_blank" rel="noreferrer" class="link blue grow">
<div class="fl w-40 w-10-ns">
<img class="shadow-4" src="{{book.book.image_url}}" title="{{book.book.title}}" alt="{{book.book.title}}" />
</div>
<div class="fl w-60 w-90-ns pl0 pl4-ns">
<h2 class="f5 f4-ns fw6 near-black ma0">{{book.book.title}}</h2>
<h3 class="f5 f4-ns fw5 mid-gray ma0">By {{book.book.authors.author.name}}</h3>
<div class="gold pt2">{{book.rating | starRating}}</div>
</div>
</a>
</article>
{% endfor %}
</div>