{% if webmentions %}
{% assign absoluteUrl = page.url | prepend: site.url %}
{% assign mentionsForPage = webmentions | webmentionsForUrl: absoluteUrl %}
{% assign likes = mentionsForPage['like-of'] %}
{% assign reposts = mentionsForPage['repost-of'] %}
{% assign comments = mentionsForPage['in-reply-to'] %}

{% if likes.length or reposts.length or comments.length %}

<section id="webmentions" class="flex flex-row justify-center items-center mt-8 w-6/12 text-sm md:text-xl space-x-4">
    <div class="text-red-500 font-extrabold flex flex-col justify-center items-center w-1/3">
        <i class="fas fa-2x fa-heart"></i>
        <span>{{likes.length | default: 0}}</span>
    </div>
    <div class="text-blue-500 font-extrabold flex flex-col justify-center items-center w-1/3">
        <i class="fas fa-2x fa-retweet"></i>
        <span>{{reposts.length | default: 0}}</span>
    </div>
    <div class="text-green-500 font-extrabold flex flex-col justify-center items-center w-1/3">
        <i class="fas fa-2x fa-comment"></i>
        <span>{{comments.length | default: 0}}</span>
    </div>
</section>
{% endif %}

{% endif %}